---
import { SITE } from 'astrowind:config';
---

<a href="/" class="flex items-center">
  <img
    src="/brand/logo.png"
    alt={SITE?.name || 'Logo'}
    class="h-8 w-auto hidden"
    onerror="this.style.display='none'; this.nextElementSibling.style.display='inline-block'"
    onload="this.style.display='inline-block'; this.nextElementSibling.style.display='none'"
  />
  <span
    class="self-center ml-2 rtl:ml-0 rtl:mr-2 text-2xl md:text-xl font-bold text-gray-900 whitespace-nowrap dark:text-white"
    >{SITE?.name}</span
  >
</a>

