---
import Layout from '~/layouts/PageLayout.astro';
import Content from '~/components/widgets/Content.astro';

const metadata = {
  title: '新竹｜Loft 風格宅',
  description: '住宅裝修：開放式廚房、鐵件木作、工業風元素與收納整合',
};
---

<Layout metadata={metadata}>
  <Content
    tagline="住宅空間"
    title="Loft 風格宅"
    items={[
      { title: '地點', description: '新竹市' },
      { title: '坪數', description: '約 35 坪' },
      { title: '施工內容', description: '開放式廚房、鐵件層架、木作中島/吧台、收納櫃體' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1493804714600-6edb1cd93080?auto=format&fit=crop&w=1600&q=80',
      alt: 'Loft 風格宅 完工主視覺',
    }}
  >
    <Fragment slot="content"> 以中性灰與木質調營造溫潤工業風，鐵件層架結合間接照明，兼顧展示與收納機能。 </Fragment>
  </Content>

  <section class="container py-10">
    <div class="grid gap-6 md:grid-cols-3">
      <img
        class="rounded-lg"
        src="https://images.unsplash.com/photo-1505691723518-36a5ac3b2e9b?auto=format&fit=crop&w=1200&q=80"
        alt="客餐廳一景"
      />
      <img
        class="rounded-lg"
        src="https://images.unsplash.com/photo-1591453253329-30b8d3590b7b?auto=format&fit=crop&w=1200&q=80"
        alt="木作細節"
      />
      <img
        class="rounded-lg"
        src="https://images.unsplash.com/photo-1505692794403-34d4982f88aa?auto=format&fit=crop&w=1200&q=80"
        alt="臥室收納"
      />
    </div>
  </section>
</Layout>
