---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: '聯絡我們',
  description: '歡迎填寫表單或來信洽詢，專人將盡快回覆。',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="期待與您攜手，共創卓越空間" />

  <ContactUs
    id="form"
    title="請填寫以下表單，我們將盡快與您聯繫"
    subtitle="若有緊急需求可直接來信至 info@nice8.works"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: '姓名',
      },
      {
        type: 'email',
        name: 'email',
        label: '電子郵件',
      },
      {
        type: 'tel',
        name: 'phone',
        label: '聯絡電話',
      },
      {
        type: 'text',
        name: 'company',
        label: '公司/設計事務所',
      },
    ]}
    textarea={{
      label: '需求描述',
    }}
    disclaimer={{
      label: '送出即代表您同意我們蒐集與處理聯絡資訊以回覆您的需求。',
    }}
    description="一般在1個工作日內回覆。營業時間：週一至週五 08:00–17:00"
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="聯絡資訊"
    items={[
      {
        title: 'Email',
        description: 'info@nice8.works',
        icon: 'tabler:mail',
      },
      {
        title: '地址',
        description: '新北市中和區板南路520巷5號',
        icon: 'tabler:map-pin',
      },
      {
        title: '營業時間',
        description: '週一至週五 08:00 - 17:00',
        icon: 'tabler:clock',
      },
    ]}
  />
</Layout>
