---
import Layout from '~/layouts/PageLayout.astro';

import HeroCarousel from '~/components/widgets/HeroCarousel.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import ItemGrid from '~/components/ui/ItemGrid.astro';

const metadata = {
  title: '大鋒工程｜專業木工團隊',
  description: '設計師與屋主信賴的木作木工施工團隊，從丈量、估價、進度控管到完工保固，一站式負責。',
};
---

<Layout metadata={metadata}>
  <!-- Hero：首頁主視覺 -->

  <HeroCarousel
    autoplayDelay={5000}
    slides={[
      {
        image: {
          src: '/images/hero_Banner_1.png',
          alt: '木工師傅裁板材示意圖',
        },
        tagline: '專業木工',
        title: '大鋒<br class="hidden sm:inline" />木工團隊',
        subtitle: '設計師專屬的木工後盾，讓靈感如期實現。',
        description: '專業木作B2B施工團隊',
        overlayClass: 'bg-slate-900/55',
        align: 'left',
      },
      {
        image: {
          src: '/images/hero_Banner_2.png',
          alt: '室內裝修木工現場施工示意圖',
        },
        tagline: '配備工廠',
        title: '效率<br class="hidden sm:inline" />工廠施作',
        subtitle: '縮短現場工序，設計師的安心選擇。',
        description: '設計師最可靠的隱形夥伴',
        overlayClass: 'bg-slate-900/55',
        align: 'center',
      },
      {
        image: {
          src: '/images/hero_Banner_3.png',
          alt: '室內裝修木工溝通工法示意圖',
        },
        tagline: '專業信任',
        title: '細心<br class="hidden sm:inline" />按圖精工',
        subtitle: '把麻煩交給我們，把掌聲留給設計師。',
        description: '讓設計師安心的木工工班。',
        overlayClass: 'bg-slate-900/55',
        align: 'right',
      },
    ]}
  />

  <!-- 核心優勢 -->

  <Features
    id="features"
    tagline="核心優勢"
    title="把設計交給我們安心落地"
    subtitle="透明流程 × 穩定工班 × 高標準品質"
    items={[
      {
        title: '一站式整合',
        description: '木作、泥作、水電、油漆、玻璃鐵件統包協調，單一窗口負責到底。',
        icon: 'tabler:box-multiple',
      },
      {
        title: '報價清楚透明',
        description: '分項明細與用料規格完整揭示，變更加價先溝通再施作。',
        icon: 'tabler:receipt-2',
      },
      {
        title: '工期嚴謹控管',
        description: '以里程碑管理關鍵工序，即時回報現場狀況，準時完工。',
        icon: 'tabler:timeline',
      },
      {
        title: '品質驗收標準',
        description: '木作收邊、垂直水平、接縫與表面平整度皆有書面標準。',
        icon: 'tabler:checklist',
      },
      {
        title: '工地安全與清潔',
        description: '每日收整工區、妥善防塵與養護，完工交屋前專業清潔。',
        icon: 'tabler:shield-check',
      },
      {
        title: '完善保固',
        description: '提供保固與到府售後服務，讓您入住無後顧之憂。',
        icon: 'tabler:award',
      },
    ]}
  />

  <!-- 核心服務 -->
  <Features2
    tagline="核心服務"
    title="住宅與商空全面承作"
    subtitle="從局部改善到整體翻新，依需求彈性搭配"
    items={[
      {
        title: '室內裝修統包',
        description: '格局調整、隔間、門片、地坪、天花、油漆與軟裝整合。',
        icon: 'tabler:home-cog',
      },
      {
        title: '木作與系統櫃',
        description: '電視牆、收納櫃、衣櫃與床架；手作木工與系統板材皆可。',
        icon: 'tabler:wood',
      },
      {
        title: '水電/泥作/油漆',
        description: '配管配線、衛浴與磁磚、批土與塗裝，工序密合與美觀兼顧。',
        icon: 'tabler:tools',
      },
      {
        title: '玻璃鐵件/地板/窗簾',
        description: '強化玻璃、烤漆鐵件、超耐磨地板、百葉與遮光簾一次到位。',
        icon: 'tabler:layers-intersect',
      },
      {
        title: '老屋翻修與管線更新',
        description: '結構評估、廚衛更新、配電與防漏處理，安全第一。',
        icon: 'tabler:building-warehouse',
      },
      {
        title: '設計配合與3D',
        description: '可配合設計師或提供3D示意，協助您預先想像成果。',
        icon: 'tabler:box-align-top-left',
      },
    ]}
  />

  <!-- 案例展示 -->
  <section class="relative w-full py-16 md:py-24 lg:py-28">
    <div class="container">
      <div class="mx-auto max-w-3xl text-center">
        <h2 class="text-3xl font-bold tracking-tight dark:text-white sm:text-4xl">案例展示</h2>
        <p class="mt-4 text-muted">精選住宅與商空實績，更多請看完整作品集。</p>
      </div>

      <div class="mt-10">
        <ItemGrid
          columns={3}
          items={[
            {
              title: '內湖｜現代簡約宅',
              description: '電視主牆、系統收納與臥室衣櫃',
              callToAction: { text: '查看個案', href: '/portfolio/neihu-modern' },
            },
            {
              title: '信義區｜辦公室改造',
              description: '玻璃隔間、公共區域動線優化',
              callToAction: { text: '查看個案', href: '/portfolio/xinyi-office' },
            },
            {
              title: '新竹｜Loft 風格宅',
              description: '開放式廚房與鐵件木作',
              callToAction: { text: '查看個案', href: '/portfolio/hsinchu-loft' },
            },
          ]}
        />
      </div>
    </div>
  </section>

  <!-- 服務流程（精簡版） -->
  <Steps2
    tagline="流程"
    title="從諮詢到交屋，我們陪你走完全程"
    items={[
      {
        title: '1. 線上諮詢與初估',
        description: '瞭解需求與預算範圍，提供大致工法與建議。',
        icon: 'tabler:message-check',
      },
      {
        title: '2. 現場丈量與討論',
        description: '安排到府勘查、確認尺寸與動線，蒐集細節。',
        icon: 'tabler:ruler-measure',
      },
      {
        title: '3. 圖面與正式報價',
        description: '依設計圖或需求列出分項明細與材料規格。',
        icon: 'tabler:file-description',
      },
      { title: '4. 簽約與排程', description: '確認工期里程碑與付款節點，進場前預告。', icon: 'tabler:calendar-event' },
      {
        title: '5. 施作與階段驗收',
        description: '重要工序到場說明，完工前共同檢核缺失。',
        icon: 'tabler:clipboard-check',
      },
      { title: '6. 交屋與保固', description: '完工交付文件與保固說明，後續服務不間斷。', icon: 'tabler:home-check' },
    ]}
  />

  <!-- 客戶見證 -->
  <Testimonials
    title="客戶見證"
    testimonials={[
      {
        testimonial: '與設計師三方溝通順暢，工地管理有條理，進度與品質都如預期，入住後也協助快速排除小問題。',
        name: '林先生',
        job: '屋主｜新北新成屋',
      },
      {
        testimonial: '木作細節很到位，轉角與收邊都處理得很好，收納使用起來很順手。',
        name: '周小姐',
        job: '屋主｜台北舊屋翻新',
      },
      {
        testimonial: '商空改造期間仍需營運，團隊協助分區分段施工，把影響降到最低，十分專業。',
        name: '張經理',
        job: '企業客戶｜辦公室',
      },
    ]}
  />

  <!-- 常見問題 -->
  <FAQs
    title="常見問題 FAQ"
    tagline="FAQ"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: '估價需要準備什麼資料？',
        description: '若已有設計圖請提供；若尚未設計，請先告知坪數、格局與需求大綱與預算，方便初估。',
      },
      {
        title: '工期大約多久？',
        description: '依規模而定，單一空間 2–4 週，整屋 6–12 週，實際以現場評估與排程為準。',
      },
      {
        title: '報價是否會追加？',
        description: '正式報價含明細，若需求變更或現場突發需追加，皆會先溝通同意後才施作。',
      },
      {
        title: '有提供保固嗎？',
        description: '完工提供保固服務，木作、油漆、水電等依項目不同有對應期程，交屋時會書面說明。',
      },
      {
        title: '可以只做木作或部分工程嗎？',
        description: '可以，我們接受單項工程委託，也能與既有設計/工班配合。',
      },
      {
        title: '付款方式與節點？',
        description: '一般為簽約訂金、開工、進度款與尾款，依工程規模調整，於合約載明。',
      },
    ]}
  />
</Layout>
